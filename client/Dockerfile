# => Build container
FROM node:10-alpine as build

WORKDIR /cloud1-client

COPY package.json /cloud1-client/package.json

RUN npm install

RUN npm install react-scripts -g

COPY . /cloud1-client

RUN npm run build

# => Run container
FROM nginx:1.16.0

COPY --from=build /cloud1-client/build /usr/share/nginx/html

RUN rm /etc/nginx/conf.d/default.conf

COPY nginx/nginx.conf /etc/nginx/conf.d

EXPOSE 80

# Start Nginx server
CMD ["/bin/bash", "-c", "nginx -g \"daemon off;\""]